<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivArticleImage"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/margin_item_list" />

    <TextView
        android:id="@+id/tvArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_item_list"
        android:layout_toEndOf="@+id/ivArticleImage"
        android:layout_toRightOf="@+id/ivArticleImage"
        android:textSize="@dimen/article_title" />

    <TextView
        android:id="@+id/tvArticleDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivArticleImage"
        android:layout_margin="@dimen/margin_item_list" />

    <TextView
        android:id="@+id/tvArticleCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvArticleDescription"
        android:layout_margin="@dimen/margin_item_list" />

    <TextView
        android:id="@+id/tvArticlePublishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_item_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

</RelativeLayout>
