<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/articleImage"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/margin_item_list"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_item_list"
        android:layout_toEndOf="@+id/articleImage"
        android:layout_toRightOf="@+id/articleImage"
        android:textSize="@dimen/article_title"
        tools:text="Title" />

    <TextView
        android:id="@+id/articleDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articleImage"
        android:layout_margin="@dimen/margin_item_list"
        tools:text="safdfsadf ds fadfdsaf dsf sa" />

    <TextView
        android:id="@+id/articleCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/articleDescription"
        android:layout_marginLeft="@dimen/margin_item_list"
        android:layout_marginStart="@dimen/margin_item_list"
        android:layout_marginTop="@dimen/margin_item_list"
        tools:text="Title" />

    <TextView
        android:id="@+id/articlePublishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/articleCreator"
        android:layout_margin="@dimen/margin_item_list"
        tools:text="Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

</RelativeLayout>
