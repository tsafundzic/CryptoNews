<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/margin_item_list">

        <ImageView
            android:id="@+id/selectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_date"
            android:tint="@color/white" />

        <EditText
            android:id="@+id/etInputWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/selectDate"
            android:layout_toRightOf="@+id/selectDate"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:hint="@string/search_articles"
            android:textColor="@color/white"
            android:textColorHint="@color/grey" />

        <Button
            android:id="@+id/showArticlesBasedOnInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/etInputWord"
            android:layout_toRightOf="@+id/etInputWord"
            android:text="@string/search" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvArticleList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

